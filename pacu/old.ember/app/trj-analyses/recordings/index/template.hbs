<div id="import-progress" class="ui basic modal">
  <div class="ui loader"></div>
  <div class="ui icon header">
    <i class="archive icon"></i> Import data...
  </div>
  <div class="content"
    style="height: 480px; overflow-y: scroll; border: 1px solid red;">
    {{x-console-stream messages=messages class="ui"}}
  </div>
</div>

<h2>Recording {{model.recording}}</h2>
<h2>Trials</h2>

<div class="ui stackable three column page grid">
{{#each model.trials as |trial|}}
  <div class="column">
    {{#x-anlz-session-card
      title=trial.name
      user=trial.user
      timeAgo=trial.time
      desc=trial.desc
      host=trial.host
      src=trial.mouse
    }}
    {{#if trial.package.exists}}
      <div class="extra content">
        <div class="ui vertical fluid buttons">
          <div class="ui blue basic button" {{action "newSession" trial}}>New session</div>
          <div class="ui red basic button" {{action "removePackage" trial}}>Remove</div>
        </div>
      </div>
      <div class="extra content">
        {{#each trial.package.sessions as |s|}}
        <h5 class="ui header">
          <i class="radio icon"></i>
          <div class="content">
            <span class="trj-analyses-open-session"
              {{action "openSession" trial s}}>{{s.name}}</span>
            <div class="ui inline simple dropdown">
              <i class="dropdown icon"></i>
              <div class="menu">
                <div class="header">Actions for {{s.name}}</div>
                <div class="item" {{action "removeSession" trial s}}>Delete</div>
              </div>
            </div>
          </div>
        </h5>
        {{/each}}
      </div>
    {{else}}
      <div class="extra content">
        <div class="ui basic fluid red button" {{action "importRaw" trial}}>Import</div>
      </div>
    {{/if}}
    {{/x-anlz-session-card}}
  </div>
{{else}}
  no...
{{/each}}
</div>
{{outlet}}
