<section>
  {{#if fullscreen.isEnabled}}
    <div id="get-focused" class="circular ui small icon button" {{action "getFocused"}}>
      <i class="icon minimize"></i>
    </div>
    {{#sui-popup selector="#get-focused" position="bottom left"}}
      Click to exit fullscreen
    {{/sui-popup}}
  {{else}}
    <div id="get-focused" class="circular ui small icon button" {{action "getFocused"}}>
      <i class="icon maximize"></i>
    </div>
    {{#sui-popup selector="#get-focused" position="bottom left"}}
      Click and get focused
    {{/sui-popup}}
  {{/if}}

  {{#link-to 'andor'}}
    <div id="get-andor" class="nav circular ui small icon blue button">
      <i class="camera retro icon"></i>
    </div>
  {{/link-to}}
  {{#sui-popup selector="#get-andor" position="bottom left"}}
    Launch Andor Camera Controller
  {{/sui-popup}}

  {{#link-to 'analyses'}}
    <div id="get-analyzer" class="nav circular ui small icon blue button">
      <i class="crosshairs icon"></i>
    </div>
  {{/link-to}}
  {{#sui-popup selector="#get-analyzer" position="bottom left"}}
    Launch Image Stack Analyzer
  {{/sui-popup}}

  {{#link-to 'trj-analyses'}}
    <div id="get-trajectory-analyzer" class="nav circular ui small icon blue button">
      <i class="paw icon"></i>
    </div>
  {{/link-to}}
  {{#sui-popup selector="#get-trajectory-analyzer" position="bottom left"}}
    Launch Image Stack and Trajectory Analyzer
  {{/sui-popup}}

  {{#link-to 'psychopy'}}
    <div id="get-psypy" class="nav circular ui small icon blue button">
      <i class="unhide icon"></i>
    </div>
  {{/link-to}}
  {{#sui-popup selector="#get-psypy" position="bottom left"}}
    Launch PsychoPy Controller
  {{/sui-popup}}

  {{#link-to 'index'}}
  <h3 class="ui left floated inverted header app-info">
    PACU: <small><em>Sunil, I need a descriptive name!</em></small>
  </h3>
  {{/link-to}}
  <h3 class="ui right floated inverted header teal app-info">
    {{current-feature}}
  </h3>
</section>

<section class="ui clearing divider"></section> {{! ui clearing is useful. }}
<section>
  {{outlet}}
</section>

<section class="ui divider"></section>
