<input type="hidden" name="{{attrs.name}}" value="{{attrs.value}}">
<i class="dropdown icon"></i>
<div class="default text">{{if attrs.prompt attrs.prompt 'Please select...'}}</div>
<div class="menu">
  {{#each attrs.items as |item index|}}
  <div class="item" data-value="{{index}}">
    <i class="{{if item.sui_icon item.sui_icon 'circle thin'}} icon"></i>
    {{if valuePath (get item valuePath) item}}
    {{!-- #if valuePath (get item valuePath) item}}
      {{get item valuePath}}
    {{else}}
      {{item}}
    {{/if --}}
  </div>
  {{/each}}
</div>

{{!-- EXAMPLE SIMPLE CASE
  {{sui-model-select
    name=model.name
    value=model.value
    items=model.items
    onChange=(action "enumChange" model)
  }}
--}}

{{!-- EXAMPLE ADVANCED CASE
  {{sui-model-select
    name=model.name
    value=model.value
    valuePath="name"
    items=model.items
    onChange=(action "enumChange" model)
    prompt="choose one..."
  }}
--}}
