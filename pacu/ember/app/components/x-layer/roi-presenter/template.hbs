{{#each rois as |roi|}}
  {{#x-layer/roi roi as |r|}}
    {{x-layer/roi/polygon roi.polygon
      active=roi.active
      busy=roi.busy
      onDeriveROI=(action "deriveROI" rois roi)
      onCancelROI=(action "removeROI" rois)
      onRemoveROI=(action "removeROI" rois roi)
      onExclusiveToggleROI=(action "exclusiveToggleROI" rois roi)
      onRefreshROI=(action "updatePoint" roi)
    }}
    {{#each r.circles as |c|}}
      {{x-layer/roi/circle c
        onClonePoint=(action "insertPoint" roi)
        onCancelPoint=(action "cancelPoint" roi)
        onRemovePoint=(action "removePoint" roi)
        onRefreshPoint=(action "updatePoint" roi)
      }}
    {{/each}}
  {{/x-layer/roi}}
{{/each}}
