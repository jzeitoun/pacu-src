<text x="4" y="10" fill="yellow">points(↕): {{nSides}}, size(↔): {{size}}</text>
<text x="4" y="20" fill="yellow">TAB to toggle, ESC to quit</text>
{{#if pointAvailable}}
  <line x1="0" y1="{{y}}" x2="{{width}}" y2="{{y}}" />
  <line x1="{{x}}" y1="0" x2="{{x}}" y2="{{height}}" />
  {{#each polygon as |p|}}
    <circle cx={{p.x}} cy={{p.y}} r="3"/>
  {{/each}}
{{/if}}
