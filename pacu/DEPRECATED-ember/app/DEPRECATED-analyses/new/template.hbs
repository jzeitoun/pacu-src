<div id="search-condition" class="ui {{!-- small --}} basic modal">
  <div class="ui icon header">
    <i class="archive icon"></i> Conditions Browser
  </div>
  <div class="content" style="height: 480px; overflow-y: scroll; border: 1px solid red;">
    {{x-conditions-browser type=model.type selected=model.conditionid}}
  </div>
  <div class="actions">
    <div id="close-conditions-browser" class="ui red basic cancel inverted button">
      <i class="remove icon"></i> Close
    </div>
    {{!-- <div class="ui green ok inverted button">
      <i class="checkmark icon"></i> Choose
    </div> --}}
  </div>
</div>

<div class="ui center aligned inverted segment">
  <h2 class="ui">Create new session</h2>
</div>
<div class="ui inverted segment">
  <form class="ui inverted form" {{action "save" model on="submit"}}>
    <div class="field">
      <label>Title</label>
      {{input value=model.title type="text" placeholder="Title"}}
    </div>
    <div class="four fields">
      <div class="field">
        <label>User</label>
        {{input value=model.user type="text" placeholder="User"}}
      </div>
      <div class="field">
        <label>Description</label>
        {{input value=model.desc type="text" placeholder="Some note here..."}}
      </div>
      <div class="field">
        <label>Experiment Type</label>
        {{sui-model-select
          name="experiment-type"
          value=model.type
          items=expTypes
          onChange=(action "experimentTypeEnumChanged" model)
        }}
      </div>
      <div class="field">
        <label>Condition ID</label>
        {{#if model.conditionid}}
        <div class="ui inverted green segment">{{model.conditionid}}</div>
        {{else}}
          {{!input value=model.conditionid type="text" placeholder="Database ID"}}
          <button {{action "searchCondition" model}}
            class="fluid ui inverted violet button">Search...</button>
        {{/if}}
      </div>
    </div>
  <div class="field">
    <label>Image stack resource route</label>
    {{input value=model.imagesrc type="hidden"}}
    {{#if model.imagesrc}}
      <div class="ui inverted green segment">{{model.imagesrc}}</div>
    {{else}}
      {{x-nav-step src="/api/fs/sbx" value=steps
        selected=model.imagesrc onSelect="focusSubmit"}}
    {{/if}}
  </div>
  <button id="submit-new-analysis" class="ui inverted fluid red button" type="submit">Submit</button>
</form>
</div>

