@import 'pod-styles'
@import "range"

html
  background-color black

body
  color ivory
  background-color black
  padding 2vh 2vw

.header.app-info
  line-height 2em

.header.app-info
  font-family Open Sans

a.active > div.nav
  background-color maroon !important

#copyright
  text-align center
  font-size 0.8em
  font-style italic
  p
    margin 0.5em
    letter-spacing 0.1em

[data-ember-action]
  cursor pointer
  &.action-coloring:hover
    background-color rgba(0, 0, 200, 0.2)
  &.action-coloring:active
    background-color rgba(200, 0, 0, 0.2)

.sci-analyses input
  color black
.sci-analyses-open-session:hover
  color red
.trj-analyses input
  color black
.trjci-analyses-open-session:hover
  color red

#route-sci-analysis
  .grid.compact-margin
    margin-bottom -5rem

#route-trj-analysis
  polygon
    stroke-width 1.5px
  circle
    stroke-width 1.5px
    r 5
  circle.centroid
    stroke-width 1.5px
    r 5
    &:hover
      r 10

#route-sbx-analysis
  polygon
    stroke-width 2px
    // &.focused
    //   stroke red
    //   stroke-width 5px
  circle, circle.centroid
    r 4
    fill rgba(50,50,50,0.75)

  a.focus-responder:focus
    outline-color red

